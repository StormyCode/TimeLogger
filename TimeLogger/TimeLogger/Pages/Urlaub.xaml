<UserControl x:Class="TimeLogger.Pages.Urlaub"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="204" d:DesignWidth="380"  HorizontalAlignment="Left" VerticalAlignment="Top" >
    <Grid Style="{StaticResource ContentRoot}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="380" Margin="0, 10, 0, 0" Height="204">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel MinWidth="200">
                <Calendar x:Name="datetimepicker_vacation" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
        <ComboBox x:Name="vacation_type" HorizontalAlignment="Left" Margin="231,51,0,0" VerticalAlignment="Top" Width="120">
            <Button Content="Vacation" FontFamily="Verdana"/>
            <Button Content="Flexitime" FontFamily="Verdana"/>
        </ComboBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="231,93,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="231,151,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
