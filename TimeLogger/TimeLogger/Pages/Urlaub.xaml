<UserControl x:Class="TimeLogger.Pages.Urlaub"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="204" d:DesignWidth="380"  HorizontalAlignment="Left" VerticalAlignment="Top" >
    <Grid Style="{StaticResource ContentRoot}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="380" Margin="0, 10, 0, 0" Height="204">
        <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel MinWidth="200">
                <Calendar x:Name="datetimepicker_vacation" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Verdana" SelectedDatesChanged="datetimepicker_vacation_SelectedDatesChanged"/>
            </StackPanel>
        </ScrollViewer>
        <ComboBox x:Name="vacation_type" Margin="231,72,0,0" VerticalAlignment="Top" Width="120" FontFamily="Verdana" HorizontalAlignment="Left">
            <ComboBoxItem Content="Urlaub"/>
            <ComboBoxItem Content="Gleittag"/>
            <ComboBoxItem Content="Arbeitstag" />
        </ComboBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="231,98,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="245,162,0,0" VerticalAlignment="Top" Height="22"/>

    </Grid>
</UserControl>
