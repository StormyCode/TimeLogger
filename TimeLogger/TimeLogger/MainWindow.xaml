<mui:ModernWindow x:Class="TimeLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="TimeLogger" IsTitleVisible="True" ResizeMode="CanMinimize" Height="340"
        ContentSource="/Pages/Home.xaml" Width="450" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Verdana">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Main">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Zeit eintragen" Source="/Pages/Home.xaml" />
                <mui:Link DisplayName="log file" Source="/Pages/Logfile.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="about">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="" Source="/Pages/about.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="settings" Source="/Pages/Settings/Appearance.xaml" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
